# Gemini APIキー（必須）
# GOOGLE_API_KEY=your_api_key_here
# VLOG_GEMINI_API_KEY=your_api_key_here

# VRChatのプロセス名（任意、カンマ区切り）
# VLOG_PROCESS_NAMES=VRChat.exe,VRChat,VRChatClient.exe

# 監視間隔（秒、任意。デフォルト: 30）
# VLOG_CHECK_INTERVAL=30

# 録音ディレクトリ（任意、デフォルト: ./recordings）
# VLOG_RECORDING_DIR=./recordings

# 日記ディレクトリ（任意、デフォルト: ./diaries）
# VLOG_DIARY_DIR=./diaries

# 音声設定（任意）
# 音声設定（任意）
# VLOG_SAMPLE_RATE=16000
# VLOG_CHANNELS=1
# VLOG_BLOCK_SIZE=1024

# Whisper設定（任意）
# VLOG_WHISPER_MODEL_SIZE=base
# VLOG_WHISPER_DEVICE=cpu
# VLOG_WHISPER_COMPUTE_TYPE=int8
# VLOG_WHISPER_BEAM_SIZE=5
# VLOG_WHISPER_VAD_FILTER=true

# 無音しきい値（任意。大きくすると無音カットが強くなる。デフォルト: 0.02-0.05）
# VLOG_SILENCE_THRESHOLD=0.02

# ログ保存期間（日、任意。デフォルト: 7）
# VLOG_RETENTION_DAYS=7

# Geminiモデル（任意）
# VLOG_GEMINI_MODEL=gemini-3-pro-preview
